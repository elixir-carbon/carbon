<h1>Login</h1>

<%= if @conn.assigns[:error] do %>
	<div class="error">
		Invalid email or password
	</div>
<% end %>

<%= form_for @conn, "/login", [as: :login, class: "form"], fn f -> %>
	<div class="form__group">
		<%= label f, :email %>
		<%= text_input f, :email %>
	</div>
	<div class="form__group">
		<%= label f, :password %>
		<%= password_input f, :password %>
	</div>
	<div class="form__group form__actions">
		<%= submit "Login" %>
	</div>
<% end %>