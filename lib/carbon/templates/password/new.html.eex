<section>
	<h2>Reset password</h2>

	<%= form_for @conn, "/password/create", [as: :user, class: "form"], fn f -> %>
		<div class="form__group">
			<%= label f, :email %>
			<%= email_input f, :email %>
			<%= error_tag f, :email %>
		</div>
		<div class="form__actions">
			<%= submit "Save"  %>
		</div>
	<% end %>
</section>